@model MerchShop.ViewModels.AddProductViewModel

<h2>Add Product</h2>

<form asp-action="CreateProduct" asp-controller="Home" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="number" asp-for="Price" />
            <span asp-validation-for="Price" />
        </div>
        <div class="form-group">
            <label asp-for="Count">Count</label>
            <input type="number" asp-for="Count" />
            <span asp-validation-for="Count" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="SizeId">SizeId</label>
            <input type="text" asp-for="SizeId" />
            <span asp-validation-for="SizeId" />
        </div>
        <div class="form-group">
            <label asp-for="SubcategoryId">SubcategoryId</label>
            <input type="text" asp-for="SubcategoryId" />
            <span asp-validation-for="SubcategoryId" />
        </div>
        <div class="form-group">
            <label asp-for="ImageName"></label>
            <input class="form-control" type="file" name="uploadedFile" />
            <span asp-validation-for="ImageName" />
        </div>
        <div class="form-group">
            <input type="submit" value="CreateProduct" class="btn btn-outline-dark" />
        </div>


    </div>
</form>